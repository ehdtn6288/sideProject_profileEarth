extends layouts/main

block content
    .form-container 
        form(action=routes.editProfile(profile.id), method = "post")            
            input(type="text", placeholder = "Title",name="title", value=profile.title)
            input(type="text", placeholder = "Name", name="name" , value=profile.name)
            textarea(placeholder="Description", name="description")=profile.description
            input(type="submit", value="Edit")
            button.profileDelete__button
                a(href=routes.deleteProfile(profile.id)) Delete

               
        
